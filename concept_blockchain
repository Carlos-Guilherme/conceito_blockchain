from ast import Num
from asyncio.windows_events import NULL
from gettext import NullTranslations
import random
import time

print('bem vindo!')


carteira = 0
xarada = random.randrange(0, 100)
miner = Num
nv_miner = Num
timer = Num
loop = 1

time.sleep(1)

print('- Configurar Mineração')
mine_config_mine = input('Pressione Enter para configurar:')

if mine_config_mine == '':
    while True:
        nv_miner = int(input('Nivel de mineração: ')) # nivel 1 é o mais forte, 2 é mais leve e 3 mais ainda, consequentemente reduzindo a recompensa
        if nv_miner == 1: # mineração nv1
            start_time = time.time() # inicia a contagem
            while (miner != xarada):
                miner = random.randrange(0, 10000)
                print(miner)
            end_time = time.time() # termina a contagem
            tempo = end_time-start_time
            print(f'Essa mineração levou {tempo:.2f} segundos')
            minerado = tempo / nv_miner
            carteira =+ minerado
            print(f'O bloco minerado gerou {minerado:.2f} Bósons!')
            print(f'seu saldo é {carteira:.2f}')
            nv_miner = Num
        elif nv_miner == 2: # mineração nv2
            start_time = time.time() # inicia a contagem
            while (miner != xarada):
                miner = random.randrange(0, 1000)
                print(miner)
            end_time = time.time() # termina a contagem
            tempo = end_time-start_time
            print(f'Essa mineração levou {tempo:.2f} segundos')
            minerado = tempo / nv_miner
            carteira =+ minerado
            print(f'O bloco minerado gerou {minerado:.2f} Bósons!')
            print(f'seu saldo é {carteira:.2f}')
            nv_miner = Num
        elif nv_miner == 3: # mineração nv3
            start_time = time.time() # inicia a contagem
            while (miner != xarada):
                miner = random.randrange(0, 100)
                print(miner)
            end_time = time.time() # termina a contagem
            tempo = end_time-start_time
            print(f'Essa mineração levou {tempo:.2f} segundos')
            minerado = tempo / nv_miner
            carteira =+ minerado
            print(f'O bloco minerado gerou {minerado:.2f} Bósons!')
            print(f'seu saldo é {carteira:.2f}')
            nv_miner = Num
